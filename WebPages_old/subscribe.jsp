
<div class="leaderboard">
	<h3>Subscribe to the journal</h3>
	<div class="accordion" id="accordion">
		<div class="accordion-group">
			<div class="accordion-heading">
				<a class="accordion-toggle" data-toggle="collapse"
					data-parent="#accordion" href="#collapseOne"> By keywords </a>
			</div>
			<div id="collapseOne" class="accordion-body collapse"
				style="height: 0px;">
				<div class="accordion-inner">
					<form class="well form-subscription-keywords">
						<input id="keywords" type="text" class="input-large search-query"
							placeholder="Keywords" /> <input id="email" type="email"
							class="input-xlarge search-query" placeholder="Email address" />
						<button type="submit" class="btn">Subscribe</button>
					</form>
				</div>
			</div>
		</div>
		<div class="accordion-group">
			<div class="accordion-heading">

				<a class="accordion-toggle" data-toggle="collapse"
					data-parent="#accordion" href="#collapseTwo"> Subscribe to
					future editions </a>
			</div>
			<div id="collapseTwo" class="accordion-body collapse"
				style="height: 0px;">
				<div class="accordion-inner">
					<form class="well form-subscription-editions">
						<input id="email" type="email" class="input-xlarge search-query"
							placeholder="Email address" />
						<button type="submit" class="btn">Subscribe</button>
					</form>
				</div>
			</div>

		</div>
	</div>
</div>


